@using Cards.Web.Helpers
@model IEnumerable<Cards.Web.Models.Card>

@{
    ViewBag.Title = Resource.ManageCards;
}

@if (Session["createdNewCard"] != null)
{
    Session["createdNewCard"] = null;
    <br />
    <div id="error-msgs" class="error-msgs">
        <div class="alert alert-success" role="alert">
            <i class="glyphicon glyphicon-ok-circle"></i> Новая визитка успешно сохранена!
        </div>
    </div>
}

<table border="1">
    <tbody>
        <tr>
            <td>
                Тут будут мои визитки
            </td>
            <td>
                <a href="/Card/CardTemplates">
                    Добавить визитку
                </a>
            </td>
        </tr>
    </tbody>
</table>

@if (Model.Count() != 0)
{
    <table class="table-bordered" @*style="position: absolute; visibility: hidden;"*@>
        <tbody id="cards">
            @foreach (var item in Model)
            {
                foreach (var ci in item.CardInfoes)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Template</td>
                        <td>@item.Name</td>
                        <td>@item.Rating</td>
                        <td>@ci.Id</td>
                        <td>@ci.Info.Type</td>
                        <td>@ci.Info.Content</td>
                        <td>@ci.PositionX</td>
                        <td>@ci.PositionY</td>
                        <td>@item.User.Email</td>
                        <td>@item.User.Id</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

<style type="text/css">
    table {
        margin: 30px auto 0 auto;
        display: block;
        width: 80%;
        height: 60%;
        text-align: center;
    }

    .error-msgs {
        width: 500px;
        margin-left: auto;
        margin-right: auto;
    }
</style>